@article{GriDB,
  author     = {Hong, Zicong and Guo, Song and Zhou, Enyuan and Chen, Wuhui and Huang, Huawei and Zomaya, Albert},
  title      = {GriDB: Scaling Blockchain Database via Sharding and Off-Chain Cross-Shard Mechanism},
  year       = {2023},
