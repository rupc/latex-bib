@inproceedings{flexiblebft,
  author    = {Malkhi, Dahlia and Nayak, Kartik and Ren, Ling},
  title     = {Flexible Byzantine Fault Tolerance},
  year      = {2019},
  isbn      = {9781450367479},
  publisher = {Association for Computing Machinery},
